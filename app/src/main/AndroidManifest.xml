<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pmd.rentavehiculos">

    <!-- 游 Permiso para acceso a Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 游 Permiso para verificar el estado de la red -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.RentaVehiculos"
        android:usesCleartextTraffic="true">

        <!-- 游릭 Splash Screen como pantalla de inicio -->
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 游릭 Login Activity -->
        <activity
            android:name=".views.LoginActivity"
            android:exported="true"/>

        <!-- 游릭 Cliente Activity -->
        <activity
            android:name=".views.ClienteActivity"
            android:exported="true"/>

        <!-- 游릭 Admin Activity -->
        <activity
            android:name=".views.AdminActivity"
            android:exported="true"/>

        <!-- 游릭 Veh칤culos Disponibles -->
        <activity
            android:name=".views.VehiculosActivity"
            android:exported="true"/>

        <!-- 游릭 Veh칤culos Rentados -->
        <activity
            android:name=".views.VehiculosRentadosActivity"
            android:exported="true"/>




    </application>

</manifest>
